{
	"name": "forum-discussion-api",
	"version": "1.0.0",
	"description": "RESTful API for forum discussion app",
	"main": "api/index.js",
	"scripts": {
		"migrate:prod": "node-pg-migrate --envPath .env",
		"migrate:dev": "node-pg-migrate --envPath .development.env",
		"migrate:test": "node-pg-migrate --envPath .test.env",
		"test": "jest --setupFiles dotenv/config -i",
		"start": "cross-env NODE_ENV=production node api/index.js",
		"start:dev": "cross-env NODE_ENV=development nodemon src/app.js",
		"test:watch": "jest --watchAll --coverage --setupFiles dotenv/config -i",
		"test:applications": "jest --setupFiles dotenv/config --testPathPattern=api/Applications/ -i",
		"test:commons": "jest --setupFiles dotenv/config --testPathPattern=api/Commons/ -i",
		"test:domains": "jest --setupFiles dotenv/config --testPathPattern=api/Domains/ -i",
		"test:repository": "jest --setupFiles dotenv/config --testPathPattern=api/Infrastructures/repository -i",
		"test:http": "jest --setupFiles dotenv/config --testPathPattern=api/Infrastructures/repository -i"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/regysaputra/forum-discussion-api.git"
	},
	"keywords": [
		"node.js"
	],
	"author": "Regy Saputra",
	"license": "MIT",
	"dependencies": {
		"bcrypt": "^5.1.1",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"instances-container": "^2.0.6",
		"nanoid": "^3.3.7",
		"pg": "^8.11.5",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^4.3.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.3.0",
		"@types/jest": "^29.5.12",
		"eslint": "^9.3.0",
		"globals": "^15.3.0",
		"jest": "^29.7.0",
		"node-pg-migrate": "^7.4.0",
		"nodemon": "^3.1.2"
	}
}
